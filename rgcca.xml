<tool id="multiOmics_Toolbox" name="multiOmics_Toolbox" version="1.0">

    <description>performs multi-variate analysis (PCA, CCA, PLS, RGCCA) and projects the variables and samples into a bi-dimensional space.</description>

<!--    <macros>
        <import>macros.xml</import>
    </macros>-->

    <macros>

        <xml name="study_metadata">
            <section name="study_metadata" title="Study Overview Metadata">
                <param name="title" type="text" label="Study Title" value="Study Title" help="e.g. Metabolomics study of the effect of ... on ..."/>
            </section>
        </xml>
    </macros>

    <command><![CDATA[
        Rscript /rgcca_galaxy.R
        -d '$inputs'
        --output1 $variables_space --output2 $samples_space --output3 $best_biomarkers
    ]]></command>

    <inputs>

    </inputs>

    <outputs>
        <data name="variables_space" label="variables_space.pdf" format="pdf" />
        <data name="samples_space" label="samples_space.pdf" format="pdf" />
        <data name="best_biomarkers" label="best_biomarkers.pdf" format="pdf" />
    </outputs>

    <help>

    </help>

    <citations>
        <citation type="doi">10.1093/nar/gky301</citation>
        <citation type="doi">10.1111/1467-9868.00293</citation>
    <citation type="doi">10.1016/0377-0427(87)90125-7</citation>

    </citations>
</tool>
